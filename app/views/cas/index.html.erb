<p id="notice"><%= notice %></p>

<h1>Cas</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Internal</th>
      <th>Path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cas.each do |ca| %>
      <tr>
        <td><%= ca.name %></td>
        <td><%= ca.internal %></td>
        <td><%= ca.path %></td>
        <td><%= link_to 'Show', ca %></td>
        <td><%= link_to 'Edit', edit_ca_path(ca) %></td>
        <td><%= link_to 'Destroy', ca, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ca', new_ca_path, class: 'btn btn-primary' %>
