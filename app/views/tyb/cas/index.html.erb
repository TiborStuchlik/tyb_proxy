<h1><span class="badge badge-warning">CERTIFICATION AUTHORITIES</span></h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Path</th>
      <th>Key</th>
      <th>Certificate</th>
      <th>Last check</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tyb_cas.each do |tyb_ca| %>
    <%
      pk = tyb_ca.privkey
      if pk
        hkey = 'OK'
      else
        hkey = 'NONE'
      end
      cr = tyb_ca.cert
      if cr
        hcert = cr.not_after.strftime('%d.%m.%Y')
      else
        hcert = 'NONE'
      end
    %>
      <tr>
        <td><%= tyb_ca.name %></td>
        <td><%= tyb_ca.path %></td>
        <td><%= hkey %></td>
        <td><%= hcert %></td>
        <td><%= tyb_ca.last_check %></td>
        <td><%= link_to 'Show', tyb_ca %></td>
        <td><%= link_to 'Edit', edit_tyb_ca_path(tyb_ca) %></td>
        <td><%= link_to 'Destroy', tyb_ca, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% content_for :footer do %>
  <%= link_to 'NEW CERTIFICATION AUTHORITY', new_tyb_ca_path, class: 'btn btn-primary mr-2' %>
<% end %>